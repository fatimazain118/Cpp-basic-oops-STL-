#include <iostream>
using namespace std;
int main()
{
    int i;
    int marks[10] = {10, 20, 30, 40};
    for (i = 1; i <= 4; i++)
    {

        cout <<" Roll no. "<<i<<" marks is : "<<marks[i-1]<< endl;
    }
    return 0;
}
---------------------------------------------------------------------------------------------------------------------------
*************************************Output*************************************

 Roll no. 1 marks is : 10
 Roll no. 2 marks is : 20
 Roll no. 3 marks is : 30
 Roll no. 4 marks is : 40
 
 ---------------------------------------------------------------------------------------------------------------------------------
 
 #include <iostream>
using namespace std;
int main()
{
    int i;
    int marks[10] = {10, 20, 30, 40};
    i=1;
    while(i<5)
    {
        cout<<"Roll no. "<<i<<" marks is : "<<marks[i-1]<<endl;
        i++;
    }
    return 0;
}
----------------------------------------------------------------------------------------------------------------------
******************************Output****************************************


 Roll no. 1 marks is : 10
 Roll no. 2 marks is : 20
 Roll no. 3 marks is : 30
 Roll no. 4 marks is : 40
 
 --------------------------------------------------------------------------------------------------------------------
 
 *******************************pointers of array************************
 
#include <iostream>
using namespace std;
int main()
{
    int i;
    int marks[10] = {10, 20, 30, 40};
    int *p=marks;
cout<<"The value of marks[0] is"<<*p<<endl; 
cout<<"The value of marks[1] is"<<*(p+1)<<endl; 
cout<<"The value of marks[2] is"<<*(p+2)<<endl; 
cout<<"The value of marks[3] is"<<*(p+3)<<endl; 
 
return 0;
}

------------------------------------------------------------------------------------------------------------------------
*****************************************Output***************************************************


The value of marks[0] is20
The value of marks[1] is30
The value of marks[2] is40
The value of marks[3] is50

 
