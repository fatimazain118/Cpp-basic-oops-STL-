#include<iostream>
using namespace std;
 int main(){

     //************IF-ELSE LADER*****************


    int age;
    cout<<"Enter your age"<<endl;
    cin>>age;
    
    if((age<18) && (age>1))
    {
       cout<<"You can't come to the party"<<endl;
    }
     else if(age==18)
     {
      cout<<"You can come to the party with kid pass"<<endl;
 }
 else if(age<1)
 {
     cout<<"You are not yet born"<<endl;
 }

 else{
     cout<<"You can come to the party";
 }
return 0;
}

--------------------------------------------------------------------------------------------------------------------------------------------------------------
*************************************************Output******************************************************************************

Enter your age
10
You can't come to the party

------------------------------------------------------------------------------------------------------------------------------------------------------------------------------

//*************Selection Contol Structure: Switch Case******************
#include<iostream>
using namespace std;
 int main(){

 int age;
    cout<<"Enter your age"<<endl;
    cin>>age;
    
switch (age)
{
case 0:
cout<<"You are 18\n";
    break;

    case 1:
    cout<<"You are not 18"<<endl;
    break;

default:
cout<<"No comments"<<endl;
    break;
}

cout<<"Done with switch cases";

return 0;
 }
 ------------------------------------------------------------------------------------------------------------------------------------------------------
 ***************************Output****************************************
 
 Enter your age
0
You are 18
Done with switch cases
