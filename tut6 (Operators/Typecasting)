 #include<iostream>
using namespace std;
int main(){

 float d = 34.4f;           //by default 34.4 double hota c++ me aur agr aisa likha hai to 34.4f float hua, thats why we have written "f" wth the number to recognise the num when we pass in the function

 long double e = 34.4l;

 cout<<"The size of 34.4 is "<<sizeof(34.4)<<endl;
 cout<<"The size of 34.4f is "<<sizeof(34.4f)<<endl;
 cout<<"The size of 34.4F is "<<sizeof(34.4F)<<endl;
 cout<<"The size of 34.4l is "<<sizeof(34.4l)<<endl;
 cout<<"The size of 34.4L is  "<<sizeof(34.4L)<<endl;

cout<<"Value of d is:"<<d<<endl<<"The value of e is:"<<e;
return 0;
}
----------------------------------------------------------------------------------------------------------------------------------------------------------
**************************************Output*****************************

The size of 34.4 is 8
The size of 34.4f is 4
The size of 34.4F is 4
The size of 34.4l is 12
The size of 34.4L is  12
Value of d is:34.4
The value of e is:34.4


----------------------------------------------------------------------------------------------------------------------------------------------------------------------------
*************************Typecasting**************************************

#include<iostream>
using namespace std;
int main()
{
int x = 45;
float y = 45.5;

cout<<"The value of x is "<<x<<endl;
cout<<"The value of x is "<<float(x)<<endl;
cout<<"The value of x is "<<(float)x<<endl;
cout<<"The value of y is "<<int(y)<<endl; //float ko typecaste kr k int me
cout<<"The value of y is "<<(int)y<<endl;

return 0;
}

-----------------------------------------------------------------------------------------------------------------------------------------------------------
*******************************************Output*******************************************

The value of x is 45
The value of x is 45
The value of x is 45
The value of y is 45
The value of y is 45
