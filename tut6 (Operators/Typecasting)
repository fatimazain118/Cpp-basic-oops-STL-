#include<iostream>
using namespace std;

int c = 54;

int main(){

 int a,b,c;
 cout<<"Enter the value of a"<<endl ;
 cin>>a;
 cout<<"Enter the value of b"<<endl;
 cin>>b;
 c = a+b;
 cout<<"\nThe sum is "<<c<<endl;
 cout<<"The global value of c is "<<::c;

//Scope Resolution Operator "::" to print the global vaue of our program in function
return 0;
  }
---------------------------------------------------------------------------------------------------------------------------------------------------------------------------
**********************************Output************************

Enter the value of a
3
Enter the value of b
6

The sum is 9
The global value of c is 54

